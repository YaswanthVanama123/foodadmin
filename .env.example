# ============================================
# API CONFIGURATION
# ============================================

# Backend API base URL (without /api suffix)
VITE_API_URL=http://localhost:5000

# WebSocket URL for real-time updates
VITE_SOCKET_URL=http://localhost:5000

# ============================================
# FIREBASE CONFIGURATION (Push Notifications)
# ============================================

# Get these values from Firebase Console > Project Settings > General
# Your apps > Web app > Firebase SDK snippet

# Firebase API Key
VITE_FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Firebase Auth Domain
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Firebase Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012

# Firebase App ID
VITE_FIREBASE_APP_ID=1:123456789012:web:xxxxxxxxxxxxxxxxxxxx

# Firebase Measurement ID (optional, for Analytics)
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase VAPID Key (for Web Push)
# Get from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
VITE_FIREBASE_VAPID_KEY=BXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Enable/disable Firebase notifications
VITE_FIREBASE_ENABLED=true
